@using PagedList.Mvc
@model BookShop.Models.ViewModels.Books.BooksForBookCategoryViewModel

@foreach (var book in Model.Books)
{
    @Html.Partial("_BookSummaryPartial", book)
}
<div class="row">
    <div class="col-md-12">
        <br />
        Strona @(Model.Books.PageCount < Model.Books.PageNumber ? 1 : Model.Books.PageNumber) z @Model.Books.PageCount
        <div id="contentPager">
            @Html.PagedListPager(Model.Books, page => Url.Action("GetBooksByBookCategoryPartial", new
       {
           Page = page,
           MainCategory = Model.CurrentMainCategory.Name,
           SubMainCategory = Model.CurrentSubMainCategory.Name,
           BookCategory = Model.CurrentBookCategory.Name,
           ItemsPerPage = Model.CurrentItemsPerPage,
           SortOrder = Model.CurrentSortOrder
       }))
        </div>
    </div>
</div>

