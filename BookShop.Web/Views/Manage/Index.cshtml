@model BookShop.Models.ViewModels.Account.IndexViewModel
@{
    ViewBag.Title = "Moje konto";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @ViewBag.Title
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.HasPassword)
        {
            @Html.ActionLink("Zmień hasło", "ChangePassword", null, new { @class = "btn btn-primary", style="width: 140px;" })
        }
        else
        {
            @Html.ActionLink("Ustaw hasło", "SetPassword", null, new { @class = "btn btn-primary", style = "width: 140px;" })
        }
    </div>
    
</div>
<div class="row" style="margin-top: 25px;">
    <div class="col-md-12">
        @Html.ActionLink("Usługi logowania", "ManageLogins", null, new { @class = "btn btn-primary", style = "width: 140px;" })
    </div>
</div>

<div class="row" style="margin-top: 25px;">
    <div class="col-md-12">
        @Html.ActionLink("Moje recenzje", "MyReviews", null, new { @class = "btn btn-primary", style = "width: 140px;" })
    </div>
</div>

<div class="row" style="margin-top: 25px;">
    <div class="col-md-12">
        @Html.ActionLink("Pokaż mój profil", "MyProfile", null, new { @class = "btn btn-primary", style = "width: 140px;" })
    </div>
</div>

<div class="row" style="margin-top: 25px;">
    <div class="col-md-12">
        @Html.ActionLink("Zmień mój profil", "UpdateMyProfileData", null, new { @class = "btn btn-primary", style = "width: 140px;" })
    </div>
</div>

<div class="row" style="margin-top: 25px;">
    <div class="col-md-12">
        @Html.ActionLink("Moje transakcje", "MyTransactions", null, new { @class = "btn btn-primary", style = "width: 140px;" })
    </div>
</div>
