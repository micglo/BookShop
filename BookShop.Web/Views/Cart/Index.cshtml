@model BookShop.Models.ViewModels.ShoppingCart.ShoppingCartViewModel
@{
    ViewBag.Title = "Koszyk";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @ViewBag.Title
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div id="cart">
    @Html.Partial("IndexPartial", Model)
</div>

@section Scripts{ 
    @Scripts.Render("~/bundles/cart")
}