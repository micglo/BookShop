@model BookShop.Models.ViewModels.ShoppingCart.SummaryViewModel
@{
    ViewBag.Title = "Podsumowanie zamówienia";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Koszyk", "Index", "Cart")
            </li>
            <li>
                @Html.ActionLink("Dane Adresowe", "DeliveryData", "Cart")
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @ViewBag.Title
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div id="summaryResult">
    @Html.Partial("SummaryPartial", Model)
</div>