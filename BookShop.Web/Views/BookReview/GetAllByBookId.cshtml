@using BookShop.Data
@model IEnumerable<BookReview>
    
@if (Model.Any())
{
    foreach (var review in Model)
    {
        @Html.Partial("_BookReviewSummaryPartial", review)
    }
}
else
{
    <div class="row">
        <div class="col-md-12 text-center">
            Ta książka nie ma jeszcze wystawionej recenzji.
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            Możesz być pierwszą osobą, która doda opinie.
        </div>
    </div>
}
