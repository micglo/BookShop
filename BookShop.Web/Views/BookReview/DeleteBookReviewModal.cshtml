<div class="modal fade" id="deleteBookReviewModal" tabindex="-1" role="dialog" aria-labelledby="deleteBookReviewModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Usuń recenzje</h4>
            </div>
            @using (Ajax.BeginForm("DeleteReview", "BookReview", new AjaxOptions
            {
                Url = Url.Action("DeleteReview", "BookReview"),
                HttpMethod = "POST",
                OnSuccess = "deleteBookReview"
            }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("bookReviewId")
                <div class="modal-body">
                    <div id="deleteBookReviewResult">
                        Czy napewno chcesz usunąć tą recenzję?
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-2 text-left">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                        </div>
                        <div class="col-md-10 text-right">
                            <input type="submit" class="btn btn-success" value="Usuń" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
