<div class="modal fade" id="editAuthorReviewModal" tabindex="-1" role="dialog" aria-labelledby="editAuthorReviewModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edytuj recenzje</h4>
            </div>
            @using (Ajax.BeginForm("EditReviewPost", "AuthorReview", null, new AjaxOptions
            {
                Url = Url.Action("EditReviewPost", "AuthorReview"),
                HttpMethod = "POST",
                OnSuccess = "editAuthorReview"
            }, new { id = "editAuthorReviewForm" }))
            {
                <div class="modal-body">
                    <div id="editAuthorReviewResult">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-2 text-left">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                        </div>
                        <div class="col-md-10 text-right">
                            <input type="submit" class="btn btn-success" value="Zmień" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

