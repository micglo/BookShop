@model BookShop.Data.Publishing

<div class="modal fade" id="deletePublishingModal" tabindex="-1" role="dialog" aria-labelledby="deletePublishingModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Usuń wydawnictwo</h4>
            </div>
            @using (Ajax.BeginForm("DeletePublishingPost", "Publishings", new { area = "Admin" }, new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "showDeletePublishingResult"
            }, new { id = "deletePublishingForm" }))
            {
                <div class="modal-body">
                    <div id="deletePublishingResult">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id, new { id = "publishingId" })
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="text-center text-danger">Czy napewno chcesz usunąc wydawnictwo: @Model.NameForDisplay?</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-md-2 text-left">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                        </div>
                        <div class="col-md-10 text-right">
                            <input type="submit" class="btn btn-success" value="Usuń" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


